#include<stdio.h>
void main()
{
    int a,b,c,d;

    printf("ievadi 3 ciprus pa vienam \n");
    scanf("%d%d%d",&a,&b,&c);
    printf("ka sakartot (1)augosi (2)disltosi \n");
    scanf("%d", &d);

    if (d==1)
        {
            if((a>=b)&&(a>=c))
                {
                    if(b>=c)
                        {
                        printf("\n augosa seciba: %d %d %d",c,b,a);
                        }
                    else
                        {
                        printf("\n augosa seciba: %d %d %d",b,c,a);
                        }
                }
            else if((b>=a)&&(b>=c))
                {
                    if(a>=c)
                        {
                        printf("\n augosa seciba : %d %d %d",c,a,b);
                        }
                    else
                        {
                        printf("\n augosa seciba : %d %d %d",a,c,b);
                        }
                }
            else if((c>=a)&&(c>=b))
                {
                    if(a>=b)
                        {
                        printf("\n augosa seciba : %d %d %d",b,a,c);
                        }
                    else
                        {
                        printf("\n augosa seciba : %d %d %d",a,b,c);
                        }
                }
        }
    else if (d==2)
        {
            if((a>=b)&&(a>=c))
                {
                    if(b>=c)
                        {
                        printf("\n dilstosa seciba : %d %d %d",a,b,c);}
                    else
                        {
                         printf("\n dilstosa seciba : %d %d %d",a,c,b);
                        }
                }
            else if((b>=a)&&(b>=c))
                {
                    if(a>=c)
                        {
                        printf("\n dilstosa seciba : %d %d %d",b,a,c);
                        }
                    else
                        {
                        printf("\n dilstosa seciba : %d %d %d",b,c,a);
                        }
                }
            else if((c>=a)&&(c>=b))
                {
                    if(a>=b)
                        {
                        printf("\n dilstosa seciba : %d %d %d",c,a,b);
                        }
                    else
                        {
                        printf("\n Descending order : %d %d %d",c,b,a);
                        }
                }
        }
    return 0;
}
